#!/usr/bin/env groovy

pipeline {
    options {
        timeout(time: 60, unit: 'MINUTES')
        ansiColor('xterm')
    }
    agent { 
        dockerfile {
            filename 'Dockerfile'
            dir '.'
            args "-t amortize-pr:$BUILD_NUMBER}"
//            registryUrl 'https://hub.docker.com'
//            registryCredentialsId 'dockerhub'
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'echo testing'
            }
        }
        stage('Push To Registry') {
            steps {
                withDockerRegistry([ credentialsId: "dockerhub", url: "" ]) {
                    sh "docker push amortize-pr:$BUILD_NUMBER"
                }
            }
        }
    }
}
